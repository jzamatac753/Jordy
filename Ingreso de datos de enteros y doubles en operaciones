#include<iostream>
using namespace std;

int main(){
  float a,b;
  
  cout<<"Escriba dos valores para utilizarlos en diferentes operaciones\n";
  cin>>a>>b;
  
  cout<<"La suma de los elementos ingresados es: "<<a+b<<endl;
  cout<<"La resta de los elementos ingresados es: "<<a-b<<endl;
  cout<<"La division de los elementos ingresados es: "<<a/b<<endl;
  cout<<"La multiplicación de los elementos ingresados es: "<<a*b<<endl;
  return 0;
}

#include<iostream>
using namespace std;

int main(){
  double a,b;
  
  cout<<"Escriba dos valores para utilizarlos en diferentes operaciones\n";
  cin>>a>>b;
  
  cout<<"La suma de los elementos ingresados es: "<<a+b<<endl;
  cout<<"La resta de los elementos ingresados es: "<<a-b<<endl;
  cout<<"La division de los elementos ingresados es: "<<a/b<<endl;
  cout<<"La multiplicación de los elementos ingresados es: "<<a*b<<endl;
  return 0;
}
